# Public host for Traefik router rule
BOOKSTACK_HOST=kb.livetransparent.com

# Must match the routed public URL exactly
BOOKSTACK_APP_URL=https://kb.livetransparent.com

# Timezone used by app and db containers
BOOKSTACK_TIMEZONE=America/Los_Angeles

# Generate with:
# echo "base64:$(openssl rand -base64 32)"
BOOKSTACK_APP_KEY=base64:REPLACE_WITH_BASE64_KEY

# DB settings
BOOKSTACK_DB_NAME=bookstack
BOOKSTACK_DB_USER=bookstack
BOOKSTACK_DB_PASSWORD=REPLACE_WITH_STRONG_PASSWORD
BOOKSTACK_DB_ROOT_PASSWORD=REPLACE_WITH_STRONG_ROOT_PASSWORD
